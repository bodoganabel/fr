{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Launch via Nodemon",
          "type": "pwa-node",
          "request": "launch",
          "runtimeExecutable": "nodemon",
          "runtimeArgs": ["--exec", "ts-node", "-r", "tsconfig-paths/register"],
          "args": ["src/index.ts"],
          "restart": true,
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen",
          "protocol": "inspector",
          "sourceMaps": true,
          "smartStep": true,
          "skipFiles": ["<node_internals>/**"]
      }
  ]
}
